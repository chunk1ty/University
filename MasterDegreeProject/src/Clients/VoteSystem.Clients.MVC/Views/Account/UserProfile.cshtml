@model VoteSystem.Clients.MVC.ViewModels.Account.UserInfoViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section styles {
    <style>
        .form-horizontal .control-label {
            padding-top: 0px;
        }
    </style>
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="row">
                    <div class="col-md-5 my-header-title">
                        Профилна информация
                    </div>
                    <div class="col-md-7">
                        @(Html.ActionLink<AccountController>("Промени", c => c.EditUserProfile(), new { area = string.Empty }, htmlAttributes: new { title = "Профил", @class = "btn btn-dark"}))
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(m => m.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(m => m.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FacultyNumber, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(m => m.FacultyNumber)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>