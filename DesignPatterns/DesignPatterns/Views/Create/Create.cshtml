@model DesignPatterns.Models.FactureViewModel

@using (Html.BeginForm("Create", "Create", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2 class="text-center" style="margin-bottom: 40px; margin-top: 40px">
        Нова фактура
    </h2>

    <div class="form-group">
        @Html.LabelFor(m => m.FactureNumber, new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.FactureNumber, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Provider, new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Provider, new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Receiver, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Receiver, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Goods, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Goods, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
            <button type="submit" class="btn btn-primary" style="margin-right: 20px">Добави</button>
            <!-- Replace area with start text-->
            <span class="btn btn-default">Отказ</span>
        </div>
}
